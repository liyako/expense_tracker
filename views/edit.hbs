<h1 class="mb-1 text-align restaurant-show-title">修改{{ record.name }}資訊 </h1>
<form action="/expense/{{ record._id }}?_method=PUT" method="POST" style="width: 50%; margin: auto">
  <div class="form-group">
    <label for="name">名稱</label>
    <input type="text" class="form-control" name="name"  value="{{ record.name }}" placeholder="請填入名稱..." id="name" required>
  </div>
  <div class="form-group">
    <label for="date">日期</label>
    <input type="date" class="form-control new-date"  name="date" placeholder="日期" value="{{ date }}"
    autocomplete="on" required>
  </div>
  <div class="form-group">
    <label for="category">項目</label>
      <select id="category" class="form-control" name="category" required>
        <option value="" disabled>選擇類別</option>
        <option value="housing" {{#if category.housing}} selected {{/if}}>家居物業</option>
        <option value="transportation" {{#if category.transportation}} selected {{/if}}>交通出行</option>
        <option value="entertainment" {{#if category.entertainment}} selected {{/if}}>休閒娛樂</option>
        <option value="food" {{#if category.food}} selected {{/if}}>餐飲食品</option>
        <option value="other" {{#if category.other}} selected {{/if}}>其他</option>
      </select>
  </div>
  <div class="form-group">
    <label for="amount">金額</label>
    <input type="text" class="form-control" name="amount"  value="{{ record.amount }}" placeholder="請填入金額..." required>
  </div>
  <div class="form-group">
    <label for="merchant">商家名稱</label>
    <input type="text" class="form-control" name="merchant"  value="{{ record.merchant }}" placeholder="請填入商家名稱..." id="merchant" required>
  </div>
  <button type="submit" class="btn btn-primary">確認修改</button>
  <a href="/" class="btn btn-outline-secondary">取消</a>
</form>
